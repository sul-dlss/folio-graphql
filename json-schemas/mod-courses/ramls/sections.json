{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "A collection of sections records",
    "type": "object",
    "properties": {
        "sections": {
            "description": "List of section records",
            "id": "sections",
            "type": "array",
            "items": {
                "type": "object",
                "$ref": "section.json"
            }
        },
        "totalRecords": {
            "type": "integer"
        }
    },
    "required": [
        "sections",
        "totalRecords"
    ]
}
